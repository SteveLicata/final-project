<%= form_for @playlist, method: :create do |f| %>
  <%= f.label :playlistname %>
  <%= f.text_field :playlistname %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.submit %>
<% end %>

<!-- Partial form to create a new setlist - user_id is hidden field but needs to be included to create a new setlist -->
